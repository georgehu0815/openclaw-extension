{
  "name": "openclaw-extension",
  "displayName": "OpenClaw Extension",
  "description": "Status bar connector for the OpenClaw CLI",
  "version": "0.0.8",
  "publisher": "openknot",
  "author": {
    "name": "Val Alexander",
    "email": "val@openknot.ai"
  },
  "license": "MIT",
  "homepage": "https://github.com/openknots/openclaw-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/openknots/openclaw-extension.git"
  },
  "icon": "assets/images/image.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "cli",
    "openclaw",
    "openknot",
    "clawdbot",
    "moltbot",
    "vscode"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openclaw.connect",
        "title": "OpenClaw: Connect"
      },
      {
        "command": "openclaw.setup",
        "title": "OpenClaw: Setup"
      },
      {
        "command": "openclaw.modelSetup",
        "title": "OpenClaw: Model Setup Wizard"
      },
      {
        "command": "openclaw.harden",
        "title": "OpenClaw: Harden"
      },
      {
        "command": "openclaw.hardening.showAccessSummary",
        "title": "OpenClaw: Hardening Access Summary"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openclaw",
          "title": "OpenClaw",
          "icon": "assets/images/image.png"
        }
      ]
    },
    "views": {
      "openclaw": [
        {
          "id": "openclaw.overview",
          "name": "Overview"
        }
      ]
    },
    "configuration": {
      "title": "OpenClaw",
      "properties": {
        "openclaw.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect to OpenClaw on startup"
        },
        "openclaw.command": {
          "type": "string",
          "default": "openclaw status",
          "description": "Command to run when connecting (e.g. 'openclaw status' or 'wsl openclaw status')"
        },
        "openclaw.hardening.mode": {
          "type": "string",
          "enum": ["full", "audit", "auditFix"],
          "default": "full",
          "description": "Hardening workflow to run: audit only, audit + fix, or full (audit, fix, deep)"
        },
        "openclaw.hardening.command": {
          "type": "string",
          "default": "openclaw",
          "description": "Command prefix to run OpenClaw hardening (e.g. 'openclaw' or 'wsl openclaw')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "installLocal": "cursor --install-extension ./out/openclaw-extension.vsix",
    "publish:vsce": "vsce publish",
    "publish:ovsx": "ovsx publish -p $OVSX_TOKEN",
    "publish:all": "scripts/publish-all.sh"
  },
  "devDependencies": {
    "@types/vscode": "~1.105.0",
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
