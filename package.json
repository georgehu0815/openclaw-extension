{
  "name": "clawdbot-extension",
  "displayName": "Clawdbot Extension",
  "description": "Status bar connector for the Clawdbot CLI",
  "version": "1.0.5",
  "publisher": "ghu",
  "author": {
    "name": "ghu",
    "email": "ghu@local"
  },
  "license": "MIT",
  "homepage": "https://github.com/ghu/clawdbot-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghu/clawdbot-extension.git"
  },
  "icon": "assets/images/image.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "cli",
    "clawdbot",
    "whatsapp",
    "gateway",
    "agent",
    "vscode"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clawdbot.connect",
        "title": "Clawdbot: Connect"
      },
      {
        "command": "clawdbot.setup",
        "title": "Clawdbot: Setup"
      },
      {
        "command": "clawdbot.modelSetup",
        "title": "Clawdbot: Model Setup Wizard"
      },
      {
        "command": "clawdbot.gateway",
        "title": "Clawdbot: Start Gateway"
      },
      {
        "command": "clawdbot.status",
        "title": "Clawdbot: Show Status"
      },
      {
        "command": "clawdbot.tui",
        "title": "Clawdbot: Run TUI"
      },
      {
        "command": "clawdbot.openChat",
        "title": "Clawdbot: Open Chat Panel"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clawdbot",
          "title": "Clawdbot",
          "icon": "assets/icons/openclaw.svg"
        }
      ]
    },
    "views": {
      "clawdbot": [
        {
          "id": "clawdbot.overview",
          "name": "Overview"
        }
      ]
    },
    "configuration": {
      "title": "Clawdbot",
      "properties": {
        "clawdbot.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect to Clawdbot on startup"
        },
        "clawdbot.command": {
          "type": "string",
          "default": "clawdbot status",
          "description": "Command to run when connecting (e.g. 'clawdbot status' or 'clawdbot gateway')"
        },
        "clawdbot.clawdbotPath": {
          "type": "string",
          "default": "/Users/ghu/aiworker/clawdbot",
          "description": "Path to the clawdbot project directory"
        },
        "clawdbot.gatewayPort": {
          "type": "number",
          "default": 18789,
          "description": "Port number for the Clawdbot gateway server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "build-install": "scripts/build-and-install.sh",
    "installLocal": "code --install-extension ./clawdbot-extension-1.0.5.vsix",
    "publish:vsce": "vsce publish",
    "publish:ovsx": "ovsx publish -p $OVSX_TOKEN",
    "publish:all": "scripts/publish-all.sh"
  },
  "dependencies": {
    "marked": "^15.0.7"
  },
  "devDependencies": {
    "@types/vscode": "~1.105.0",
    "@types/node": "^22.19.7",
    "@types/marked": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
